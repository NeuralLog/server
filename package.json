{
  "name": "neurallog-server",
  "version": "1.0.0",
  "description": "A server for the NeuralLog system with storage adapter support",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts'",
    "test:redis": "powershell -File ./test-redis.ps1",
    "test:redis:unix": "bash ./test-redis.sh",
    "test:e2e": "ts-node tests/e2e/docker-e2e-test.ts",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "docker:build": "docker build -t neurallog/server:latest .",
    "docker:run": "docker run -p 3030:3030 -v neurallog-server-data:/app/data neurallog/server:latest",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "k8s:apply": "kubectl apply -k k8s",
    "k8s:delete": "kubectl delete -k k8s"
  },
  "keywords": [
    "neurallog",
    "logger",
    "server",
    "logging",
    "storage",
    "adapter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.8.4",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "nedb": "^1.8.0",
    "neurallog-shared": "file:../shared",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/nedb": "^1.8.16",
    "@types/node": "^20.17.30",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
